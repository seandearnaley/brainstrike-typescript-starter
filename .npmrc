# pnpm workspace configuration

# Enable hoisting (for compatibility with packages that expect flat node_modules)
hoist-pattern[]=*

# Auto install peer dependencies
auto-install-peers=true

# Strict peer dependencies
strict-peer-dependencies=false

# Use hard links for better performance
package-import-method=hardlink

# Enable shameless hoisting for better compatibility
shamefully-hoist=false

# Link workspace packages by default
link-workspace-packages=true

# Save workspace protocol
save-workspace-protocol=rolling

# Recursive install
recursive-install=true

# Enable lockfile validation
prefer-frozen-lockfile=true 