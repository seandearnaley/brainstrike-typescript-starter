# pnpm workspace configuration
# Use shamefully-hoist for better performance in monorepos
shamefully-hoist=true

# Auto install peer dependencies
auto-install-peers=true

# Strict peer dependencies
strict-peer-dependencies=false

# Use copy for better compatibility and performance
package-import-method=copy

# Link workspace packages by default
link-workspace-packages=true

# Save workspace protocol
save-workspace-protocol=rolling

# Enable lockfile validation
prefer-frozen-lockfile=true

# Store directory for better performance
store-dir=~/.pnpm-store

# Side effects cache for faster installs
side-effects-cache=true

# Verify store integrity
verify-store-integrity=false

# Network settings for faster downloads
network-concurrency=16
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

 